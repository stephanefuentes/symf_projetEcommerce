{% extends "base.html.twig" %}

{% block body %}

<div class="alert alert-light">

    <h1 class="alert-title">Résultat de la recherche pour </h1>


    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" name="search" type="text" value="{{ search }}" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>

    <br/>
    <hr/>



    {% for product in result %}
        

        <div class="alert-dark alert">
            <h2>{{ product.title }}
            ( {{ product.price | price }} )</h2>
            <p>{{ product.introduction | markdown }}</p>
        <br/>
        <p>
            <a href="{{ path('cart_add', {'id': product.id} )}}" class="btn btn-success text-white">
                <i class="fas fa-shopping-cart mr-1"></i>
                Ajouter
            </a>
            <a href="{{ path('product_show', {'id': product.id }) }}" class="btn btn-primary text-white">
                <i class="fas fa-search mr-1"></i>
                Détails
            </a>


        </p>
        </div>

    {% endfor %}



</div>


{% endblock %}