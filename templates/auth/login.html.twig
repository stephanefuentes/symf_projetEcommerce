{% extends 'base.html.twig' %}

{% block title %}Hello AuthController!{% endblock %}

{% block body %}

    <div class="alert alert-light">
        <h1 class="alert-title">Login</h1>
    </div>

<form action="" method="post">

    <div class="form-group">
        <input type="email" class="form-control" placeholder="Adresse mail" name="_username">
    </div>


    <div class="form-group">
        <input type="password" class="form-control" placeholder="Mots de passe" name="_password">
    </div>


    <button type="submit" class="btn btn-success">Connexion</button>

</form>



{% endblock %}
